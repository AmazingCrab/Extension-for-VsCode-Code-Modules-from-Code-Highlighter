{
    "name": "crab-highlight-modules-viewer",
    "displayName": "Crab Highlight Modules Viewer",
    "description": "Displays colors used by the Crab Code Highlighter extension in a context menu and exports highlighted code for selected layers.",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other",
        "Programming Languages",
        "Visualization",
        "Formatters"
    ],
    "activationEvents": [
        "workspaceContains:highlights.json",
        "onCommand:highlight-modules-viewer.showColorPicker"
    ],
    "main": "./extension.js",
        "files": [
        "extension.js",
        "icon.png",
        "LICENSE.md",
        "README.md"
    ],
    "contributes": {
        "commands": [
            {
                "command": "highlight-modules-viewer.showColorPicker",
                "title": "Export Modules from Color",
                "category": "Code Highlighter",
                "icon": "$(symbol-color)"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "highlight-modules-viewer.showColorPicker",
                    "when": "resourceScheme == 'file'",
                    "group": "navigation@1"
                }
            ],
            "commandPalette": [
                {
                    "command": "highlight-modules-viewer.showColorPicker",
                    "when": "workspaceHas:highlights.json"
                }
            ]
        },
        "configuration": {
            "title": "Highlight Modules Viewer",
            "properties": {
                "highlightModulesViewer.exportPath": {
                    "type": "string",
                    "default": "exported_layer",
                    "description": "Custom path for exported modules (relative to workspace root)"
                },
                "highlightModulesViewer.preserveEmptyLines": {
                    "type": "boolean",
                    "default": true,
                    "description": "Preserve empty lines in exported files to maintain original structure"
                },
                "highlightModulesViewer.exportToSingleFolder": {
                    "type": "boolean",
                    "default": false,
                    "description": "Export multiple selected layers to a single folder named 'selected_layers' instead of separate folders"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "echo 'No prepublish steps required'",
        "package": "vsce package"
    },
    "publisher": "AmazingCrab",
    "author": {
        "name": "Emanuel Conte",
        "email": "amazingcrab@proton.me",
        "url": "https://github.com/AmazingCrab"
    },
    "keywords": [
        "highlight",
        "highlighter",
        "code highlighting",
        "syntax highlighting",
        "color",
        "architecture",
        "modules",
        "organization",
        "planning",
        "refactoring",
        "microservices",
        "code extraction",
        "layer extraction",
        "monolith refactoring"
    ],
    "license": "SEE LICENSE IN LICENSE.md",
    "qna": "false",
    "repository": {
        "type": "git",
        "url": "https://github.com/AmazingCrab/Extension-for-VsCode-Crab-Modules-for-Code-Highlighter"
    },
    "bugs": {
        "url": "https://github.com/AmazingCrab/Extension-for-VsCode-Crab-Modules-for-Code-Highlighter/issues"
    },
    "homepage": "https://github.com/AmazingCrab/Extension-for-VsCode-Crab-Modules-for-Code-Highlighter#readme",
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#1E1E1E",
        "theme": "dark"
    },
    "badges": [
        {
            "url": "https://img.shields.io/badge/VS%20Code-Marketplace-blue?style=flat-square&logo=visual-studio-code",
            "href": "https://marketplace.visualstudio.com/",
            "description": "VS Code Marketplace"
        },
        {
            "url": "https://img.shields.io/badge/License-MIT-yellow.svg?style=flat-square",
            "href": "https://opensource.org/licenses/MIT",
            "description": "MIT License"
        }
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": false
    }
}